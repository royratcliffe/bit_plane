{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(ctest) Launch on Linux",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [
        "-A"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "externalConsole": false
    },
    {
      "name": "(ctest) Launch on Windows",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [
        "-A"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}"
    }
  ]
}
